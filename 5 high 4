n = int(input("Enter size of first and second arrays : "))
if n <= 0:
    print("Invalid array size")
else:
    arr1 = list(map(int, input("Enter first array elements : ").split()))
    arr2 = list(map(int, input("Enter second array elements : ").split()))
    if len(arr1) != n or len(arr2) != n:
        print("Invalid arrays")
    else:
        max_elem = max(arr1)
        min_elem = min(arr2)
        product = max_elem * min_elem
        print("max element in first array is {} and min element in second array is {}".format(max_elem, min_elem))
        print("The product of these two is {}".format(product))
